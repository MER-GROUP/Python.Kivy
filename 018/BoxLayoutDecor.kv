# версия kivi
#:kivy 1.8.0
# Описываем класс class BoxLayoutDecor(BoxLayout) для файла 018 - ContainerText.py
<BoxLayoutDecor>:
    # ----------------------------------------------------------------------
    # параметры конструктора
    # Эти свойства мы указываем в кострукторе при создании объекта
    # если бы не использавли язык графической разметки KV - Kivy Language 
    #
    # создаем ссылку на объект
    # тем самым получая доступ ко всем параметрам BoxLayout 3-го уровня в KV файле
    container: container
    # ----------------------------------------------------------------------
    # дизайн окна - расположение созданных классов (унаследованных)
    # коробочный макет
    BoxLayout:
        # ориентация коробочного макета
        # расстояние от содержимого до границы
        # расстояние между границами
        orientation: 'vertical'
        padding: 0
        spacing: 6
        # коробочный макет
        # bottom-left part:
        # нижняя левая часть
        BoxLayout:
            # ориентация коробочного макета
            # расстояние от содержимого до границы
            # расстояние между границами
            orientation: 'horizontal'
            padding: 0
            spacing: 6
            # коробочный макет
            BoxLayout:
                # размер виджета
                # ориентация коробочного макета
                # расстояние от содержимого до границы
                # расстояние между границами
                # size_hint: 0.12, 0.12
                orientation: 'vertical'
                padding: 40
                spacing: 50
                # кнопки
                Button:
                    # размер виджета
                    # содержимое текста
                    size_hint: .8, .3
                    text: 'кнопка 1'
                Button:
                    size_hint: .8, .3
                    text: 'кнопка 2'
                Button:
                    size_hint: .8, .3
                    text: 'кнопка 3'
                Button:
                    size_hint: .8, .3
                    text: 'кнопка 4'
                Button:
                    size_hint: .8, .3
                    text: 'кнопка 5'
            # коробочный макет
            BoxLayout:
                orientation: 'vertical'
                Label:
                    # даем доступ к изменению свойств BoxLayout
                    id: container
                    text: 'НАЧАЛО'
                BoxLayout:
                    padding: 40
                    spacing: 50
                    Button:
                        size_hint: .8, .3
                        text: 'СЛЕДУЮЩЕЕ СЛОВО'
                        on_press: root.next_text()
    # ----------------------------------------------------------------------
    # вызываем методы
    #
    # ----------------------------------------------------------------------