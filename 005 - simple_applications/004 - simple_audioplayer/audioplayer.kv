#:kivy 2.0.0

<AudioPlayer>:
    # vars
    slider: slider
    filename: filename
    play: play
    pause: pause
    stop: stop
    time: time
    all_time: all_time

    # settings
    orientation: 'vertical'

    #design
    Button:
        text: "Load"
        on_press: root.load_music()
    Label:
        id: filename
        text: "No song loaded"
        font_size: '15sp'