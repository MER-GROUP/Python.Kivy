#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора
<WindowSettings@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # растояние между границей и вложенными виджетами 
            padding: [0,5,0,0]
            Label:
                text: 'Settings'
                # автоматически переносить/растягивать текст {
                text_size: self.size
                halign: 'center'
                valign: 'top'
                # автоматически переносить/растягивать текст }
        BoxLayout:
            # размер виджета
            size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: 10
            Button:
                text: 'Close'
                # size_hint_y: None
                # height: 48
                on_release: root.dismiss()