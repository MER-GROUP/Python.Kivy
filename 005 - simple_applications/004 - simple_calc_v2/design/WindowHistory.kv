#:kivy 2.0.0

# импорт hex цветов
#:import hex kivy.utils.get_color_from_hex

# Модальное (всплывающе) окно калькулятора - History
<WindowHistory@ModalView>:
    # размер виджета (окна)
    size_hint: 0.9, 0.9

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            # растояние между границей и вложенными виджетами 
            padding: [0,5,0,0]
            Label:
                text: 'History'
                # автоматически переносить/растягивать текст {
                text_size: self.size
                halign: 'center'
                valign: 'top'
                # автоматически переносить/растягивать текст }
        BoxLayout:
            # размер виджета
            size_hint: 1, 0.3
            # растояние между границей и вложенными виджетами 
            padding: 10
            Button:
                text: 'Close'
                on_release: root.dismiss()