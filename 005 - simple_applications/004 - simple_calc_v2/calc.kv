#:kivy 2.0.0

# Дизайн калькулятора
<Calc>:
    # vars
    label: label
    orientation: 'vertical'
    Display:
        DisplayLabel:
            id: label
    GridLayout:
        cols: 4
        Button:
            text: '1'
            on_press: root.write_number(self)
        Button:
            text: '2'
            on_press: root.write_number(self)
        Button:
            text: '3'
            on_press: root.write_number(self)
        Button:
            text: '+'
            on_press: root.add()
        Button:
            text: '4'
            on_press: root.write_number(self)
        Button:
            text: '5'
            on_press: root.write_number(self)
        Button:
            text: '6'
            on_press: root.write_number(self)
        Button:
            text: '-'
            on_press: root.subtract()
        Button:
            text: '7'
            on_press: root.write_number(self)
        Button:
            text: '8'
            on_press: root.write_number(self)
        Button:
            text: '9'
            on_press: root.write_number(self)
        Button:
            text: '*'
            on_press: root.multiply()
        Button:
            text: 'C'
            on_press: root.clear()
        Button:
            text: '0'
            on_press: root.write_number(self)
        Button:
            text: '='
            on_press: root.equal()
        Button:
            text: '/'
            on_press: root.division()