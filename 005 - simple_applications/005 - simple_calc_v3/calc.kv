#:kivy 2.0.0
# для вызова модальных окон
#:import Factory kivy.factory.Factory

# Дизайн калькулятора
<Calc>:
    # vars
    label_display_comment: label_display_comment
    label_display: label_display
    orientation: 'vertical'
    # padding: 2
    BoxLayout:
        orientation: 'vertical'
        padding: 1
        size_hint: 1, 0.35
        Display:
            BoxLayout:
                orientation: 'vertical'
                size_hint: 1, 0.25
                padding: [5,0,0,0]
                spacing: 0
                DisplayComment:
                    id: label_display_comment
                    text: ''
            BoxLayout:
                orientation: 'vertical'
                DisplayScroll:
                    DisplayLabel:
                        id: label_display
                        text: ''
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, 0.1
        ButtonSupport:
            text: "settings"
            on_press: Factory.WindowSettings().open()
        ButtonSupport:
            text: "history"
            on_press: Factory.WindowHistory().open()
        ButtonSupport:
            text: "info"
            on_press: Factory.WindowInfo().open()
    GridLayout:
        cols: 4
        # padding: [0,2,0,0]
        ButtonBase:
            text: '1'
            on_press: root.write_number(self)
        ButtonBase:
            text: '2'
            on_press: root.write_number(self)
        ButtonBase:
            text: '3'
            on_press: root.write_number(self)
        ButtonBase:
            text: '+'
            on_press: root.add()
        ButtonBase:
            text: '4'
            on_press: root.write_number(self)
        ButtonBase:
            text: '5'
            on_press: root.write_number(self)
        ButtonBase:
            text: '6'
            on_press: root.write_number(self)
        ButtonBase:
            text: '-'
            # on_press: root.subtract()
            on_press: root.subtract() if len(label_display.text) else root.write_number(self)
        ButtonBase:
            text: '7'
            on_press: root.write_number(self)
        ButtonBase:
            text: '8'
            on_press: root.write_number(self)
        ButtonBase:
            text: '9'
            on_press: root.write_number(self)
        ButtonBase:
            text: '*'
            on_press: root.multiply()
        ButtonBase:
            # text: '.'
            text: chr(183)
            on_press: root.write_number(self)
        ButtonBase:
            text: '0'
            on_press: root.write_number(self)
        ButtonBase:
            text: '%'
            # on_press: root.equal()
        ButtonBase:
            # text: '/'
            text: chr(247)
            on_press: root.division()
        ButtonBase:
            text: 'C'
            on_press: root.clear()
        ButtonBase:
            text: 'M'
            on_press: root.division()
        ButtonBase:
            text: '<'
            on_press: root.back()
        ButtonBase:
            text: '='
            on_press: root.equal()