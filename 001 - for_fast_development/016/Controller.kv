# версия kivi
#: kivy 1.0
# Описываем класс class Controller(FloatLayout) для файла 016 - ObjStrProp.py
<Controller>:
    # ----------------------------------------------------------------------
    # параметры конструктора
    # Эти свойства мы указываем в кострукторе при создании объекта
    # если бы не использавли язык графической разметки KV - Kivy Language 
    #
    # создаем ссылку на объект
    # тем самым получая доступ ко всем параметрам Label в KV файле
    label_wid: my_custom_label
    # ----------------------------------------------------------------------
    # дизайн окна - расположение созданных классов (унаследованных)
    #
    # встраиваем коробочный макет
    BoxLayout:
        # вертикальная ориентация
        orientation: 'vertical'
        # пространство между содержимым и границей
        padding: 20
        # встраиваем кнопку
        Button:
            # название кнопки
            # info - общая переменная для для класса class Controller(FloatLayout) 
            # и файла Controller.kv созданная в классе class Controller(FloatLayout) 
            # root.info - взять значение переменной из класса class Controller(FloatLayout) 
            # root - объект котороый дает доступ ко всем данным класса class Controller(FloatLayout) 
            text: 'My controller info is: ' + root.info
            # размер шрифра
            font_size: 50
            # при нажатии на кнопку выполнить метод do_action()
            # из класса class Controller(FloatLayout) 
            on_press: root.do_action()
        # встраиваем этикетку
        Label:
            # делаем параметры Label доступными для <Controller> в KV файле
            id: my_custom_label
            # название этикетки
            text: 'My label before button press'
            # размер шрифра
            font_size: 50
    # ----------------------------------------------------------------------
    # вызываем методы
    #
    # ----------------------------------------------------------------------