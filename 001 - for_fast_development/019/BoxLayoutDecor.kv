# версия kivi
#:kivy 1.8.0
# Описываем класс class BoxLayoutDecor(BoxLayout) для файла 019 - MenuMob.py
BoxLayoutDecor:
    # ----------------------------------------------------------------------
    # параметры конструктора
    # Эти свойства мы указываем в кострукторе при создании объекта
    # если бы не использавли язык графической разметки KV - Kivy Language 
    #
    # создаем ссылку на объект
    # тем самым получая доступ ко всем параметрам BoxLayout 3-го уровня в KV файле
    container: container
    # ----------------------------------------------------------------------
    # дизайн окна - расположение созданных классов (унаследованных)
    # размер виджета
    # ориентация коробочного макета
    # расстояние от содержимого до границы
    # расстояние между границами
    orientation: 'vertical'
    # size_hint: 0.12, 0.12
    BoxLayout:
        # размер виджета
        # ориентация коробочного макета
        # расстояние от содержимого до границы
        # расстояние между границами
        orientation: 'vertical'
        padding: 40
        spacing: 50
        # size_hint: 0.12, 0.12
        # даем доступ к изменению свойств BoxLayout
        id: container
        # кнопки меню
        Button:
            # размер виджета
            # содержимое текста
            # переход в меню 1
            size_hint: 1, .3
            text: 'Меню 1'
            on_release: app.next_screen('Menu1')
        Button:
            size_hint: 1, .3
            text: 'Меню 2'
            on_release: app.next_screen('Menu2')
        Button:
            size_hint: 1, .3
            text: 'Меню 3'
            on_release: app.next_screen('Menu3')
        Button:
            size_hint: 1, .3
            text: 'Меню 4'
            on_release: app.next_screen('Menu4')
        Button:
            size_hint: 1, .3
            text: 'Меню 5'
            on_release: app.next_screen('Menu5')           
    # ----------------------------------------------------------------------
    # вызываем методы
    #
    # ----------------------------------------------------------------------