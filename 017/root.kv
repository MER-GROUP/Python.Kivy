# версия kivi
#:kivy 1.8.0
# Описываем класс class RootWidget(BoxLayout) для файла 017 - Container.py
RootWidget:
    # ----------------------------------------------------------------------
    # параметры конструктора
    # Эти свойства мы указываем в кострукторе при создании объекта
    # если бы не использавли язык графической разметки KV - Kivy Language 
    #
    # создаем ссылку на объект
    # тем самым получая доступ ко всем параметрам BoxLayout 3-го уровня в KV файле
    # import container
    container: container
    # ----------------------------------------------------------------------
    # дизайн окна - расположение созданных классов (унаследованных)
    # коробочный макет
    BoxLayout:
        # ориентация коробочного макета
        orientation: 'vertical'
        # расстояние от содержимого до границы
        padding: 0
        # расстояние между границами
        spacing: 6
        # коробочный макет
        # bottom-left part:
        # нижняя левая часть
        BoxLayout:
            # ориентация коробочного макета
            orientation: 'horizontal'
            # расстояние от содержимого до границы
            padding: 0
            # расстояние между границами
            spacing: 6
            # нижний левый
            # bottom-left
            # по умолчанию привязка объектов идет к нижнему левому углу
            # коробочный макет
            BoxLayout:
                # размер виджета
                size_hint: 0.12, 0.12
                # ориентация коробочного макета
                orientation: 'vertical'
                # расстояние от содержимого до границы
                padding: 0
                # расстояние между границами
                spacing: 6
                # опция калибровки
                # option calibrate
                # кнопка
                Button:
                    # наименование кнопки
                    text: 'Start'
                    # вызов метода при нажатии кнопки
                    # показать следующий экран
                    # вызвать экран в файле 1.kv
                    # app - вызвать метод из программы
                    on_release: app.next_screen('1')
            # коробочный макет
            # create container (bottom-right)
            # создать контейнер (внизу справа)
            BoxLayout:
                # даем доступ к изменению свойств BoxLayout
                id: container
    # ----------------------------------------------------------------------
    # вызываем методы
    #
    # ----------------------------------------------------------------------